<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFDE7"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imgCreature"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:contentDescription="Creature Image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/txtCreatureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_creature_entry_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txtCreatureDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_creature_entry_desc"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
